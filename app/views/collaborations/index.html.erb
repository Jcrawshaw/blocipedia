<h1>Collaborators</h1>

<ul>
<% @users.each do |user| %>
  <li>
    <%= user.email %>
    <% if @wiki.collaborators.include? user %>
      <% collaboration = @wiki.collaborations.find_by_user_id( user.id) %>
      <%= link_to "Remove", wiki_collaboration_path(@wiki, collaboration), method: :delete %> 
    <% else %>
      <%= link_to "Add", wiki_collaborations_path(@wiki, user_id: user.id), method: :post %>
    <% end %> 

  </li>
  
  <% end %>
</ul>
<%= link_to "Back to Wiki", wiki_path(@wiki), class: 'btn btn-primary' %>
