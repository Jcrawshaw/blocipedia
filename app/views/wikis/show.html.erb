<h1><%= markdown @wiki.title %></h1>
<p><%= markdown @wiki.body %></p>

<% if policy(@wiki).edit? %>
  <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
<% end %>

<% if @wiki.private? %>
  <p><strong>PRIVATE</strong></p>
<% end %>

<% if policy(@wiki).destroy? %>
  <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this data?' } %>
<% end %>